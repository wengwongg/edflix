<div class="filter other-input">
  <div class="input-icon">
    <i class="fa-sharp fa-solid fa-calendar-days"></i>
    <label for="start_date">Start date:</label>
  </div>
  <input id="start_date" type="date" name="start_date" min="2000-01-01" max="2049-12-31" value="<%=h params['start_date'] %>">
  <div class="input-icon"><label for="start_date_exact">Exact?</label></div>
  <input id="start_date_exact" type="checkbox" name="start_date_exact"
         <% unless params['start_date_exact'].nil? %><%=h "checked" %><% end %>>
</div>