<div class="filter other-input">
  <div class="input-icon">
    <i class="fa-sharp fa-solid fa-calendar-days"></i>
    <label for="enroll_date">Enroll date:</label>
  </div>
  <input id="enroll_date" type="date" name="enroll_date" min="2000-01-01" max="2049-12-31" value="<%=h params['enroll_date'] %>">
  <div class="input-icon"><label for="enroll_date_exact">Exact?</label></div>
  <input id="enroll_date_exact" type="checkbox" name="enroll_date_exact"
         <% unless params['enroll_date_exact'].nil? %><%=h "checked" %><% end %>>
</div>