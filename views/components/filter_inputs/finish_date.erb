<div class="filter other-input">
  <div class="input-icon">
    <i class="fa-sharp fa-solid fa-calendar-days"></i>
    <label for="finish_date">Finish date:</label>
  </div>
  <input id="finish_date" type="date" name="finish_date" min="2000-01-01" max="2049-12-31" value="<%=h params['finish_date'] %>">
  <div class="input-icon"><label for="finish_date_exact">Exact?</label></div>
  <input id="finish_date_exact" type="checkbox" name="finish_date_exact"
         <% unless params['finish_date_exact'].nil? %><%=h "checked" %><% end %>>
</div>